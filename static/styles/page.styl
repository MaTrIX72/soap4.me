.page {
	width: 100%;
	min-width: 1000px;
	height: 100%;
	display: table;

	&-section {
		display: table-row;
	}

	&-header,
	&-content,
	&-footer {
		width: 100%;
		height: 100%;
		display: table-cell;
	}

	&-content--centered {
		vertical-align: middle;
	}

	&-header,
	&-footer {
		height: 0;
	}
}